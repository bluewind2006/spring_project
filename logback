<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds" debug="false">
    <include resource="org/springframework/boot/logging/logback/base.xml"/>

    <contextName>attendance-service-logback</contextName>

    <!-- 로그의 출력 디렉토리를 설명하는 log.path 정의-->
    <!--  <property name="log.path" value="/log/DoAccUser/"/>  -->
    <property name="LogService" value="attendance-service" />
    <property name="LogNamePrefix" value="attendance" />

    <property name="LOG_HOME" value="/doatt/logs/${LogService}" />

    <!-- console print  -->
    <springProfile name="local">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <layout class="ch.qos.logback.classic.PatternLayout">
                <Pattern>%d{yyyy-MM-dd HH:mm:ss} %contextName [%thread] %-5level %logger{36} - %msg%n</Pattern>
            </layout>
        </appender>
    </springProfile>

    <!-- file print -->
    <appender name="FILE-INFO" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/catalina.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} DA %X{sessionId:--} %X{email:--} [%thread] %-5level %logger[%method:%line] - %msg%n</Pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>${LOG_HOME}/catalina.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>200MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>100</maxHistory>
        </rollingPolicy>
    </appender>

    <appender name="FILE-ERROR" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/error.log</file>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} DT %X{sessionId:--} %X{email:--} [%thread] %-5level %logger[%method:%line] - %msg%n</Pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>${LOG_HOME}/error.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>100MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>100</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- AccessLog 설정하기 -->
    <timestamp key="timestamp" datePattern="yyyy-MM-dd"/>
    <appender name="AccessLog" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/access.log</file>
        <encoder>
            <Pattern>%msg%n</Pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/access.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
            <maxHistory>365</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- logback print java package  -->
    <logger name="jdbc" level="OFF" />
    <logger name="jdbc.sqlonly" level="OFF" />
    <logger name="jdbc.audit" level="OFF" />
    <logger name="jdbc.resultset" level="OFF" />
    <logger name="jdbc.resultsettable" level="OFF" />
    <logger name="jdbc.connection" level="OFF" />
    <logger name="org.springframework.security" level="ERROR"/>
    <logger name="log4jdbc.log4j2" level="ERROR" additivity="false" />

    <springProfile name="local|dev|stage">
        <logger name="com.attendance" level="DEBUG"/>
        <logger name="org.springframework.boot" level="DEBUG"/>
        <logger name="jdbc.sqltiming" level="DEBUG" />
    </springProfile>

    <springProfile name="prod">
        <logger name="com.attendance" level="INFO"/>
        <logger name="org.springframework.boot" level="INFO"/>
        <logger name="jdbc.sqltiming" level="WARN" />
    </springProfile>

    <!-- Send logs to both console and file audit -->
    <logger name="ACCESS_LOG" level="info" additivity="false">
        <appender-ref ref="AccessLog"/>
    </logger>

    <root level="info">
        <appender-ref ref="FILE-INFO"/>
        <appender-ref ref="FILE-ERROR" />
    </root>
</configuration>
